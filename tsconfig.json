{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "moduleResolution": "node",
    "target": "es5"
  }
}
